<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.DrawFragment">
    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/color_linear_layout"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:id="@+id/seek_bar_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ligth_brown"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:id="@+id/img_brush"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_brush"/>
            <SeekBar
                android:id="@+id/seek_bar"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@id/img_brush"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/liear_layout"
                android:layout_marginEnd="10dp"
                />
            <LinearLayout
                android:id="@+id/liear_layout"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/border"
                android:layout_marginEnd="2dp"
                >
                <custum_views.BrushPaintView
                    android:id="@+id/brush_paint_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </RelativeLayout>
        <custum_views.PaintView
            android:layout_below="@+id/seek_bar_relative_layout"
            android:id="@+id/paint_view"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="match_parent"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/color_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="2dp"
        android:background="@color/ligth_brown"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="#000000"
            android:padding="5dp"
            android:background="@drawable/border"
            android:tag="#000000"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/color"
            />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="#00796b"
            android:padding="5dp"
            android:tag="#00796b"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/color"
            />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="#034578"
            android:tag="#034578"
            android:layout_marginStart="5dp"
            android:padding="5dp"
            android:contentDescription="@string/color"
            />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="#03D000"
            android:tag="#03D000"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/color"
            android:padding="5dp"
            />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="#ffffff"
            android:padding="5dp"
            android:tag="#ffffff"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/color"
            />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="#ffc107"
            android:tag="#ffc107"
            android:layout_marginStart="5dp"
            android:padding="5dp"
            android:contentDescription="@string/color"
            />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="#00838f"
            android:tag="#00838f"
            android:layout_marginStart="5dp"
            android:padding="5dp"
            android:contentDescription="@string/color"
            />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="#e53935"
            android:tag="#e53935"
            android:layout_marginStart="5dp"
            android:padding="5dp"
            android:contentDescription="@string/color"
            />
    </LinearLayout>
</RelativeLayout>